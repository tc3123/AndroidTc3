<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tc3.android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.UiActivity"></activity>
        <activity android:name=".main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".anim.ViewAnimationActivity" />
        <activity android:name=".anim.AnimatorActivity" />
        <activity android:name=".anim.DrawableActivity" />
        <activity android:name=".anim.ColorStateListActivity" />
        <activity android:name=".anim.FrameAnimationActivity" />
        <activity android:name=".anim.AnimActivity" />
        <activity android:name=".ui.RecyclerViewActivity" />
        <activity android:name=".hardware.HardWareActivity" />
        <activity android:name=".hardware.NfcActivity" />
    </application>

    <!-- NFC权限2-->
    <uses-permission android:name="android.permission.NFC" />
    <uses-feature android:name="android.hardware.nfc" android:required="true" />
</manifest>